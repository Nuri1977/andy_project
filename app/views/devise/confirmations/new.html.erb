  
<div class="columns">
  <div class="column is-half">
    <h2 class="title">Resend confirmation instructions</h2>   
    
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

        <div class="field">
          <label class="label">
            <%= f.label :email %>
          </label>
          <div class="control">
            <%= f.email_field :email, 
                              class: "input", 
                              autocomplete: "email", 
                              autofocus: true, 
                              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
          </div>
        </div>

        <div class="control">
          <%= f.submit "Resend confirmation instructions", class: "button is-info" %>
        </div>

    <% end %>

<%= render "devise/shared/links" %>